{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2022", "dom"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*.ts", "test/**/*.test.ts"],
}
